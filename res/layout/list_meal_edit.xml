<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayoutListMeal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/green"
    android:orientation="horizontal"
    android:padding="2dp" >

    <EditText
        android:id="@+id/editmealname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/TextView03"
        android:layout_toRightOf="@+id/editmealtotalcal"
        android:digits="abcdefghijklmnopqrstuvwxyz() "
        android:ems="10"
        android:inputType="text"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editmealsize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editmealname"
        android:layout_below="@+id/editmealname"
        android:layout_toLeftOf="@+id/TextView04"
        android:digits="abcdefghijklmnopqrstuvwxyz()1234567890 "
        android:ems="10"
        android:inputType="text"
        android:textSize="14sp" >
    </EditText>

    <EditText
        android:id="@+id/editmealqty"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editmealsize"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="number"
        android:maxLength="2"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/editmealtotalcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editmealname"
        android:layout_alignBottom="@+id/editmealname"
        android:layout_alignParentLeft="true"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/silver"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editmealname"
        android:layout_alignBottom="@+id/editmealname"
        android:layout_toLeftOf="@+id/editmealqty"
        android:text="Quantity"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/silver"
        android:textSize="15sp" />

    <CheckBox
        android:id="@+id/editmealcheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editmealcal"
        android:layout_alignBottom="@+id/editmealcal"
        android:layout_alignRight="@+id/editmealqty"
        android:checked="false" />

    <EditText
        android:id="@+id/editmealcal"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editmealqty"
        android:layout_toLeftOf="@+id/editmealcheckBox"
        android:ems="10"
        android:inputType="number"
        android:maxLength="4"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editmealcal"
        android:layout_alignBottom="@+id/editmealcal"
        android:layout_toLeftOf="@+id/editmealcal"
        android:text="Calories"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/silver"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/mealtypeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editmealsize"
        android:layout_alignBottom="@+id/editmealsize"
        android:layout_alignLeft="@+id/editmealtotalcal"
        android:text="Size"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/silver"
        android:textSize="15sp" />

</RelativeLayout>